{
    "version": "0.1.0-alpha",
    "npmClient": "npm",
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "verifyAccess": false,
            "verifyRegistry": false,
            "ignoreChanges": ["ignored-file", "*.md"],
            "registry": "https://registry.npmjs.org/"
        },
        "bootstrap": {
            "npmClientArgs": ["--no-package-lock"]
        }
    }
}
