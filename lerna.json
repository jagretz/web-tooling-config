{
    "version": "0.1.0",
    "npmClient": "npm",
    "packages": ["packages/*"],
    "command": {
        "publish": {
            "verifyAccess": false,
            "verifyRegistry": false,
            "ignoreChanges": ["ignored-file", "*.md"]
        },
        "bootstrap": {
            "npmClientArgs": ["--no-package-lock"]
        }
    }
}
